{
  "info": {
    "name": "Sistema de Roles - Backend Turismo",
    "description": "Colección de Postman para probar el sistema de roles y usuarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Inicialización del Sistema",
      "item": [
        {
          "name": "Configurar Sistema",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{base_url}}/api/init/setup",
              "host": ["{{base_url}}"],
              "path": ["api", "init", "setup"]
            }
          }
        },
        {
          "name": "Verificar Estado del Sistema",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/init/status",
              "host": ["{{base_url}}"],
              "path": ["api", "init", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/login",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('admin_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Registrar Usuario Regular",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"usuario@example.com\",\n    \"password\": \"password123\",\n    \"nombre\": \"Juan\",\n    \"apellido\": \"Pérez\",\n    \"rol\": \"regular\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/register",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('user_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Registrar Emprendedor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"emprendedor@example.com\",\n    \"password\": \"password123\",\n    \"nombre\": \"María\",\n    \"apellido\": \"García\",\n    \"rol\": \"emprendedor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/register",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Gestión de Usuarios (Solo Admin)",
      "item": [
        {
          "name": "Listar Todos los Usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/usuarios",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios"]
            }
          }
        },
        {
          "name": "Obtener Usuario por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/usuarios/1",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "1"]
            }
          }
        },
        {
          "name": "Crear Usuario (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"nuevo@example.com\",\n    \"password\": \"password123\",\n    \"nombre\": \"Nuevo\",\n    \"apellido\": \"Usuario\",\n    \"rol\": \"regular\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios"]
            }
          }
        },
        {
          "name": "Actualizar Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nombre\": \"Juan Actualizado\",\n    \"rol\": \"emprendedor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/usuarios/2",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "2"]
            }
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/usuarios/3",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "3"]
            }
          }
        },
        {
          "name": "Obtener Roles Disponibles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/usuarios/roles",
              "host": ["{{base_url}}"],
              "path": ["api", "usuarios", "roles"]
            }
          }
        }
      ]
    },
    {
      "name": "Gestión de Roles (Solo Admin)",
      "item": [
        {
          "name": "Listar Todos los Roles",
          "request": {
            "method": "GET",
