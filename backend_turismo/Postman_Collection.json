            },
            "url": {
              "raw": "{{base_url}}/api/roles",
              "host": ["{{base_url}}"],
              "path": ["api", "roles"]
            }
          }
        },
        {
          "name": "Actualizar Rol",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
